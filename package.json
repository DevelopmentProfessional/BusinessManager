{
  "name": "business-manager",
  "version": "1.0.0",
  "description": "Business Management System - Full Stack Application",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && ..\\.venv\\Scripts\\python.exe -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && vite",
    "start:backend": "cd backend && ..\\.venv\\Scripts\\python.exe -m uvicorn main:app --host 0.0.0.0 --port 8000",
    "start:frontend": "cd frontend && vite",
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && ..\\.venv\\Scripts\\pip.exe install -r requirements.txt",
    "install:frontend": "npm install",
    "build": "cd frontend && vite build",
    "setup": "npm run install:all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.0.18",
    "@popperjs/core": "^2.11.8",
    "@zxing/browser": "^0.1.5",
    "axios": "^1.6.2",
    "bootstrap": "^5.3.8",
    "chart.js": "^4.5.0",
    "date-fns": "^4.1.0",
    "docx-preview": "^0.3.6",
    "react": "^18.2.0",
    "react-big-calendar": "^1.19.4",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "zustand": "^4.4.7",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.15.0",
    "@eslint/js": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "vite": "^7.1.2",
    "vite-plugin-mkcert": "^1.17.8"
  },
  "keywords": [
    "business",
    "management",
    "fastapi",
    "react",
    "fullstack"
  ],
